generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Song {
  id        Int      @id @default(sequence())
  name      String
  artist    String?
  key       String
  content   String?
  dateAdded DateTime @default(now())

  createdBy User @relation(fields: [userId], references: [id])
  userId    Int @default(0)
}

model User {
  id        Int     @id @default(sequence())
  email     String  @unique
  firstName String?
  lastName  String?
  Song      Song[]
}
