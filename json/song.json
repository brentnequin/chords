{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Song",
    "type": "object",
    "required": [
        "name",
        "content",
        "key"
    ],
    "properties": {
        "id": {
            "description": "The unique identifier for a song",
            "type": "integer"
        },
        "key": {
            "type": "string",
            "description": "Key of the song",
            "minLength": 1,
            "maxLength": 1
        },
        "name": {
            "description": "Name of the song",
            "type": "string"
        },
        "artist": {
            "type": "string",
            "description": "Artist name of the song"
        },
        "content": {
            "type": "string",
            "description": "Song content in markdown format"
        }
    }
}